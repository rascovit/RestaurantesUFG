<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nome_do_campus"
                android:layout_alignParentLeft="true"
                android:textColor="#df000000"
                android:text="@string/nomeCampus"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enderecoCampus"
                android:id="@+id/endereco_do_campus"
                android:layout_below="@+id/nome_do_campus"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:textColor="#8C000000" />

        </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#38000000"
        android:layout_marginTop="8dp"/>

</LinearLayout>
