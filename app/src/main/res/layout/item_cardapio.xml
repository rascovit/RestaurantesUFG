<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#8C000000"
            android:text="Strogonoff de carne"
            android:id="@+id/nomeDoPrato_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8C000000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Descrição do prato acima citado"
            android:id="@+id/descricaoDoPrato_textView"
            android:layout_below="@+id/nomeDoPrato_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="R$14.50"
            android:textColor="#8C000000"
            android:id="@+id/precoDoPrato_textView"
            android:layout_below="@+id/descricaoDoPrato_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Comum"
            android:id="@+id/tipoDoPrato_textView"
            android:layout_alignBottom="@+id/nomeDoPrato_textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#38000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>

